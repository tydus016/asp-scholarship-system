                            <input class="form-check-input main_choice" type="radio" name="main_choice" id="inlineRadio2" value="2">
                            <label class="form-check-label" for="inlineRadio2">Senior High School</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input main_choice" type="radio" name="main_choice" id="inlineRadio3" value="3">
                            <label class="form-check-label" for="inlineRadio3">College</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center border-0">
                    <button type="submit" class="btn btn-primary">Next</button>
                </div>
            </form>
        </div>
    </div>
</div>



